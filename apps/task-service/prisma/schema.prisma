// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/task-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
  BLOCKED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskType {
  TASK
  BUG
  FEATURE
  IMPROVEMENT
  EPIC
}

// Task Model
model Task {
  id          String       @id @default(uuid())
  taskId      String       @unique // Human-readable ID like PROJ-123
  title       String
  description String?      @db.Text
  projectId   String
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  type        TaskType     @default(TASK)
  assigneeId  String?
  reporterId  String
  dueDate     DateTime?
  startDate   DateTime?
  estimatedHours Float?
  actualHours    Float?
  tags        String[]     @default([])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  comments    TaskComment[]
  attachments TaskAttachment[]
  watchers    TaskWatcher[]
  history     TaskHistory[]

  @@index([projectId])
  @@index([assigneeId])
  @@index([reporterId])
  @@index([status])
  @@index([priority])
  @@index([taskId])
  @@index([dueDate])
  @@map("tasks")
}

// Task Comment Model
model TaskComment {
  id        String   @id @default(uuid())
  taskId    String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([createdAt])
  @@map("task_comments")
}

// Task Attachment Model
model TaskAttachment {
  id           String   @id @default(uuid())
  taskId       String
  userId       String
  fileName     String
  originalName String
  mimeType     String
  fileSize     Int
  filePath     String
  createdAt    DateTime @default(now())

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@map("task_attachments")
}

// Task Watcher Model (Many-to-Many Join Table)
model TaskWatcher {
  taskId    String
  userId    String
  addedAt   DateTime @default(now())
  addedBy   String?

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@id([taskId, userId])
  @@index([taskId])
  @@index([userId])
  @@map("task_watchers")
}

// Task History Model (Activity Tracking)
model TaskHistory {
  id         String   @id @default(uuid())
  taskId     String
  userId     String
  action     String   // e.g., "created", "updated", "status_changed", "assigned"
  fieldName  String?  // Field that was changed
  oldValue   String?  // Previous value
  newValue   String?  // New value
  createdAt  DateTime @default(now())

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([createdAt])
  @@map("task_history")
}
